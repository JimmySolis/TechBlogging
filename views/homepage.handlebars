<div class="nameSiteBorder">
<h1 class="nameSite"> TechBlogging </h1>
</div>
{{#each posts as |post|}}
<section>
    <div class="card">
       <h3>{{title}}</h3>
    </div> 
    <div class="card-body">
       <h5>{{content}}</h5>
    </div>
    <div>
      <p class="username-poststamp">Post by {{user.username}} on {{formate_date createdAt}}</p>
    </div>

    <div class="commentSectionOfPost">
      <h3>Comments:</h3>
      {{#each comments as |com|}}
    <p>{{com.comment}} --- {{com.user_id}} {{com.user.username}} </p>
    {{/each}}
    </div>
   <a href="/comment/{{post_id}}"><button class="comButton"> Comment ðŸ’¬</button></a>
</section>
{{/each}}
